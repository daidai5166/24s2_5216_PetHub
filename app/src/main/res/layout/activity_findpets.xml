<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    tools:context=".activity.FindpetsActivity">

    <!-- Top Bar with Menu Button and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#a3aa7f"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Find your pet ~"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:gravity="center" />
    </LinearLayout>

    <!-- Filters Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Location Spinner -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Pet Type Spinner -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pet Type"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />


                <Spinner
                    android:id="@+id/spinner_pet_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />
            </LinearLayout>

            <!-- Gender Selector -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Male Gender -->
                    <ImageView
                        android:id="@+id/gender_male"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_gender_male"
                        android:contentDescription="Male" />

                    <!-- Female Gender -->
                    <ImageView
                        android:id="@+id/gender_female"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_gender_female"
                        android:contentDescription="Female"
                        android:layout_marginStart="16dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Location Spinner and Gender Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Location Spinner -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/spinner_location"
                    android:layout_width="match_parent"
                    android:hint="Enter location info"
                    android:layout_height="wrap_content" />
            </LinearLayout>

                <!-- Search Button -->
                <Button
                    android:id="@+id/btn_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:backgroundTint="#a3aa7f"
                    android:textColor="#ffffff"
                    android:textAllCaps="false"
                    android:padding="12dp"
                    android:layout_gravity="center" />
        </LinearLayout>


    </LinearLayout>
    <!-- Pet Results List -->
    <GridView
        android:id="@+id/grid_pets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="8dp"
        android:numColumns="2"
        android:layout_weight="1"
        android:padding="8dp"
        android:verticalSpacing="16dp" />

    <!-- Bottom Navigation Bar -->
    <!--  remember set id to use  -->
    <include
        layout="@layout/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>
