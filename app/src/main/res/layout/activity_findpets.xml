<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5">

    <!-- Top Bar with Menu Button and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#a3aa7f"
        android:padding="16dp">

        <!-- Menu Button -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menu"
            android:layout_gravity="start" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Find your pet ~"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:gravity="center" />
    </LinearLayout>

    <!-- Filters Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Pet Type Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select your pet Type"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_pet_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Pet Breed Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select your pet Breed"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_pet_breed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Location Spinner and Gender Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Location Spinner -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select your location"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinner_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Gender Selector -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Male Gender -->
                    <ImageView
                        android:id="@+id/gender_male"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_gender_male"
                        android:contentDescription="Male" />

                    <!-- Female Gender -->
                    <ImageView
                        android:id="@+id/gender_female"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_gender_female"
                        android:contentDescription="Female"
                        android:layout_marginStart="16dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Search Button -->
        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:backgroundTint="#a3aa7f"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:padding="12dp"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- Pet Results List -->
    <GridView
        android:id="@+id/grid_pets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:padding="8dp"
        android:verticalSpacing="16dp"
        android:horizontalSpacing="8dp" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#a3aa7f"
        android:padding="16dp">

        <!-- Home Button -->
        <Button
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_home"
            android:text="Home"
            android:textColor="#ffffff"
            android:background="@android:color/transparent" />

        <!-- Search Button -->
        <Button
            android:id="@+id/btn_search_bottom"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_search"
            android:text="Search"
            android:textColor="#ffffff"
            android:background="@android:color/transparent" />

        <!-- Post Button -->
        <Button
            android:id="@+id/btn_post"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_post"
            android:text="Post"
            android:textColor="#ffffff"
            android:background="@android:color/transparent" />

        <!-- Blog Button -->
        <Button
            android:id="@+id/btn_blog"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_blog"
            android:text="Blog"
            android:textColor="#ffffff"
            android:background="@android:color/transparent" />

        <!-- Account Button -->
        <Button
            android:id="@+id/btn_account"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_account"
            android:text="Account"
            android:textColor="#ffffff"
            android:background="@android:color/transparent" />
    </LinearLayout>
</LinearLayout>
