<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"

    tools:context=".activity.AccountActivity">

    <!-- Top Bar with Settings Title and Profile Picture -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#a3aa7f"
        android:padding="16dp">

        <!-- Back Button -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            android:layout_gravity="start" />
        <!-- Profile Picture -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_dog"
            android:contentDescription="Profile Picture"

            android:layout_gravity="end" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:padding="8dp">
        <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Mathew Parry"
                android:textSize="24sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Email: mathewperry0001@gmail.com"
                android:textSize="12sp"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>


    </LinearLayout>

    <!-- List of Settings Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@id/bottom_navigation_bar"
        android:padding="16dp"
        android:background="#ffffff"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">

        <!-- Edit Profile Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit Profile" />

            <TextView
                android:id="@+id/tv_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textSize="18sp"
                android:textColor="#000000"
                android:paddingStart="16dp" />
        </LinearLayout>

        <!-- My Pet Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_mypet"
                android:contentDescription="My Pet" />

            <TextView
                android:id="@+id/tv_my_pet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Pet"
                android:textSize="18sp"
                android:textColor="#000000"
                android:paddingStart="16dp" />
        </LinearLayout>

        <!-- My Blog Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_myblog"
                android:contentDescription="My Blog" />

            <TextView
                android:id="@+id/tv_my_blog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Blog"
                android:textSize="18sp"
                android:textColor="#000000"
                android:paddingStart="16dp" />
        </LinearLayout>

        <!-- Help Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_help"
                android:contentDescription="Help" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help"
                android:textSize="18sp"
                android:textColor="#000000"
                android:paddingStart="16dp" />
        </LinearLayout>

        <!-- About Us Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_about_us"
                android:contentDescription="About Us" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textSize="18sp"
                android:textColor="#000000"
                android:paddingStart="16dp" />
        </LinearLayout>


    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#a3aa7f"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Home Button -->
        <Button
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_home"
            android:text="Home"
            android:textColor="#ffffff" />

        <!-- Search Button -->
        <Button
            android:id="@+id/btn_search_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_search"
            android:text="Search"
            android:textColor="#ffffff" />

        <!-- Post Button -->
        <Button
            android:id="@+id/btn_post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_post"
            android:text="Post"
            android:textColor="#ffffff" />

        <!-- Blog Button -->
        <Button
            android:id="@+id/btn_blog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_blog"
            android:text="Blog"
            android:textColor="#ffffff" />

        <!-- Account Button -->
        <Button
            android:id="@+id/btn_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_account"
            android:text="Account"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>
