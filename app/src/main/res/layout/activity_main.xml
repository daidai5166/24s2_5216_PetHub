<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5">

    <!-- Top Section with Logo and Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#a3aa7f"
        android:padding="16dp">

        <!-- Logo Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- PetHub Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PetHub"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:fontFamily="sans-serif"
                android:layout_gravity="center" />

            <!-- Slogan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adopting instead of buying"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Search Bar -->
        <!--   android:background="@drawable/search_background"     -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:padding="8dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/search_pet"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Search your favourite pet"
                android:backgroundTint="#ffffff"
                android:textColor="#000000"
                android:padding="8dp"
                android:drawableStart="@drawable/ic_search"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:backgroundTint="#74875e"
                android:textColor="#ffffff"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>

    <!-- Pet Categories -->
<!--    <HorizontalScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:paddingTop="16dp"-->
<!--        android:paddingBottom="8dp"-->
<!--        android:background="#ffffff">-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            >

            <!-- Category Buttons -->
            <android.widget.Button
                android:id="@+id/btn_dogs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dogs"
                android:drawableTop="@drawable/ic_dog_category"
                android:textColor="#000000"
                android:background="@android:color/transparent"
                android:layout_marginEnd="16dp"
                />

            <android.widget.Button
                android:id="@+id/btn_cats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/ic_cat_category"
                android:text="Cats"
                android:textColor="#000000"
                />

            <android.widget.Button
                android:id="@+id/btn_birds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birds"
                android:drawableTop="@drawable/ic_bird_category"
                android:textColor="#000000"
                android:background="@android:color/transparent"
                android:layout_marginEnd="16dp" />

            <android.widget.Button
                android:id="@+id/btn_others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others"
                android:drawableTop="@drawable/ic_others_category"
                android:textColor="#000000"
                android:background="@android:color/transparent" />
        </LinearLayout>
<!--    </HorizontalScrollView>-->

    <!-- Pets Nearby Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pets nearby waiting for you"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Grid of Pets -->

    <!-- Bottom Navigation Bar -->

    <GridView
        android:id="@+id/grid_pets"
        android:layout_width="match_parent"
        android:layout_height="329dp"
        android:layout_weight="1"
        android:horizontalSpacing="8dp"
        android:numColumns="2"
        android:padding="8dp"
        android:verticalSpacing="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#a3aa7f"
        android:padding="16dp"
        >

        <!-- Home Button -->
        <android.widget.Button
            android:id="@+id/btn_home"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_home"
            android:text="Home"
            android:textColor="#ffffff" />

        <!-- Search Button -->
        <android.widget.Button
            android:id="@+id/btn_search_bottom"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_search"
            android:text="Search"
            android:textColor="#ffffff"
            android:background="@android:color/transparent" />

        <!-- Post Button -->
        <android.widget.Button
            android:id="@+id/btn_post"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_post"
            android:text="Post"
            android:textColor="#ffffff"
            android:background="@android:color/transparent" />

        <!-- Blog Button -->
        <android.widget.Button
            android:id="@+id/btn_blog"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_blog"
            android:text="Blog"
            android:textColor="#ffffff"
            android:background="@android:color/transparent" />

        <!-- Account Button -->
        <android.widget.Button
            android:id="@+id/btn_account"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_account"
            android:text="Account"
            android:textColor="#ffffff"
            android:background="@android:color/transparent" />
    </LinearLayout>

</LinearLayout>
