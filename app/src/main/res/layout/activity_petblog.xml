<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    tools:context=".activity.PetblogActivity">

    <!-- Top Bar with Search Functionality -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#a3aa7f"
        android:padding="16dp">

        <!-- Menu Button -->

        <!-- Search Bar -->
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Search your interesting pet blogs"
            android:backgroundTint="#ffffff"
            android:padding="8dp"
            android:textColor="#000000"
            android:layout_marginStart="16dp"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp"/>

        <!-- Search Button -->
        <Button
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:backgroundTint="#ffffff"
            android:textColor="#a3aa7f"
            android:textAllCaps="false"
            android:padding="8dp"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Category Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#ffffff"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latest"
            android:textColor="#a3aa7f"
            android:textStyle="bold"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dogs"
            android:textColor="#888888"
            android:padding="8dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cats"
            android:textColor="#888888"
            android:padding="8dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birds"
            android:textColor="#888888"
            android:padding="8dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Others"
            android:textColor="#888888"
            android:padding="8dp"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Blog Posts Grid -->
    <GridView
        android:id="@+id/blog_grid_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="2"
        android:verticalSpacing="16dp"
        android:horizontalSpacing="8dp"
        android:padding="16dp" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#a3aa7f"
        android:padding="16dp">

        <!-- Home Button -->
        <Button
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_home"
            android:text="Home"
            android:textColor="#ffffff"
            android:background="@android:color/transparent" />

        <!-- Search Button -->
        <Button
            android:id="@+id/btn_search_bottom"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_search"
            android:text="Search"
            android:textColor="#ffffff"
            android:background="@android:color/transparent" />

        <!-- Post Button -->
        <Button
            android:id="@+id/btn_post"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_post"
            android:text="Post"
            android:textColor="#ffffff"
            android:background="@android:color/transparent" />

        <!-- Blog Button -->
        <Button
            android:id="@+id/btn_blog"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_blog"
            android:text="Blog"
            android:textColor="#ffffff"
            android:background="@android:color/transparent" />

        <!-- Account Button -->
        <Button
            android:id="@+id/btn_account"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_account"
            android:text="Account"
            android:textColor="#ffffff"
            android:background="@android:color/transparent" />
    </LinearLayout>

</LinearLayout>
