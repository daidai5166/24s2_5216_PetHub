<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    tools:context=".activity.SelectnewownerActivity">

    <!-- Top Section with Back Button and User Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#a3aa7f"
        android:padding="16dp"
        android:gravity="center">

        <!-- User Image -->
        <!-- android:src="@drawable/ic_profile" -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:contentDescription="Profile Image"
            android:layout_gravity="center" />

        <!-- User Name -->
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jimmy Zhang"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:layout_marginTop="8dp" />

        <!-- User Location -->
        <TextView
            android:id="@+id/user_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sydney NSW"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Contact Information and Personal Message -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Email Field -->
        <TextView
            android:id="@+id/email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pethub@Gmail.com"
            android:textSize="16sp"
            android:textColor="#0066CC"
            android:layout_marginBottom="16dp" />

        <!-- Phone Field -->
        <TextView
            android:id="@+id/phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone:"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0466123455"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Address Field -->
        <TextView
            android:id="@+id/address_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="160 city Road, Darlington NSW 2008, Sydney"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Message to Owner Field -->
        <TextView
            android:id="@+id/message_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message to owner:"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I'm a responsible, caring individual who loves animals. I have a stable home and plenty of time to give a pet love and attention."
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

    <!-- Select as New Owner Button -->
    <Button
        android:id="@+id/select_new_owner_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select this person as new owner"
        android:backgroundTint="#a3aa7f"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:padding="16dp"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:onClick="onSelectClick"/>

</LinearLayout>
